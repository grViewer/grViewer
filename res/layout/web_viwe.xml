<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
	<LinearLayout
		android:id="@+id/webLinearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="horizontal"
		>
		<TextView
			android:id="@+id/tVtitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="item_descr"
			android:textSize="10sp"
			android:layout_weight="1"
			android:ellipsize="end"
		>
		</TextView>
		<TextView
			android:id="@+id/tVtime"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="item_time"
			android:textSize="10sp"
            android:layout_gravity="right"
            android:gravity="left"
			android:layout_weight="2"
			android:ellipsize="end"
		>
		</TextView>
	</LinearLayout>

    <WebView  android:id="@+id/webview01"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
			android:layout_weight="1"
              />
 	<LinearLayout
		android:id="@+id/webLinearLayoutBut"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="horizontal"
		>
	 	<LinearLayout
			android:id="@+id/webLinearLayoutGlobe"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
	        android:orientation="horizontal"
			android:layout_weight="1"
			android:gravity="center"
			>
			<Button
				android:id="@+id/iButGlobe"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/globe"
				android:scaleType="fitCenter"
				android:adjustViewBounds="true"
			 >
			</Button >
		</LinearLayout>
	 	<LinearLayout
			android:id="@+id/webLinearLayoutlock"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
	        android:orientation="horizontal"
			android:layout_weight="1"
			android:gravity="center"
			>
			<ToggleButton
				android:id="@+id/iButLock"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/xlock"
				android:scaleType="fitCenter"
				android:adjustViewBounds="true"
				android:textOff=""
				android:textOn=""
			>
			</ToggleButton >
		</LinearLayout>
	 	<LinearLayout
			android:id="@+id/webLinearLayoutstar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
	        android:orientation="horizontal"
			android:layout_weight="1"
			android:gravity="center"
			>
			<ToggleButton
				android:id="@+id/iButStar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/xstar"
				android:scaleType="fitCenter"
				android:adjustViewBounds="true"
				android:textOff=""
				android:textOn=""
			>
			</ToggleButton>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>